<html>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<div class="jumbotron bg-dark">
    <div class="container">
    <h1 class="display-4 text-light">Welcome</h1>
    <p class="lead text-light">This is a simple banking application</p>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="/trecord" role="button">Transaction History</a>
    </p>
    </div>
</div>
<div class="container">

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">A/C No.</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope ="col">Balance in <span>&#8377;</span> </th>
        <th scope ="col">Select</th>
    </tr>
    </thead>
    <tbody>
    <%details.forEach((detail,index)=>{%>
        <tr>
            <th scope="row"><%=index+1%></th>
            <td><%=detail.account_no%></td>
            <td><%=detail.firstname%></td>
            <td><%=detail.lastname%></td>
            <td><span>&#8377;</span> <%=detail.balance%></td>
            <td><a href="/transaction?acno=<%=detail.account_no%>">Select for transaction</a></td>
        </tr>
    <%})%>

    </tbody>
</table>
</div>
</html>